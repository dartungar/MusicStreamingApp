<Page x:Class="DesktopApp.UI.Pages.TracksPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DesktopApp.UI.Pages"
      xmlns:utils="clr-namespace:DesktopApp.Utils"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TracksPage">
    <Page.Resources>
        <utils:IntToMinutesConverter x:Key="IntToMinutesConverter"/>
        <utils:StringCollectionToStringConverter x:Key="StringCollectionToStringConverter"/>
    </Page.Resources>
    <Grid>
        <DataGrid x:Name="TracksDataGrid"  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Track" Binding="{Binding Name}"></DataGridTextColumn>
                <DataGridTextColumn Header="Album" Binding="{Binding AlbumName}"></DataGridTextColumn>
                <DataGridTextColumn Header="Length" Binding="{Binding Path=Length,Converter={StaticResource IntToMinutesConverter}}"></DataGridTextColumn>
                <DataGridTextColumn Header="Artists" Binding="{Binding Path=ArtistsNames, Converter={StaticResource StringCollectionToStringConverter}}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Page>
