@model List<Service.DTO.ArtistDto>
@{
    ViewData["Title"] = "Artists";
}

<h1>Artists</h1>
<table class="table table-striped">
    <thead class="thead-light">
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    @foreach (var artist in Model)
    {
        <tr>
            <td><a href="/artist/details/@artist.Id">@artist.Name</a></td>
            <td>@artist.Description</td>
            <td>
                <a class="text-dark" href="/artist/edit/@artist.Id">edit</a>
                &nbsp;|&nbsp;
                <a class="text-danger" href="/artist/delete/@artist.Id">delete</a>
            </td>
        </tr>
    }
    <tr>
        <td>
            <a class="text-success" href="/artist/create">create new</a>
        </td>
    </tr>

</table>
