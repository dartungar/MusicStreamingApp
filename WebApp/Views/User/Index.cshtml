@model List<Service.DTO.UserDto>
@{
    ViewData["Title"] = "Users";
}
<h1>Users</h1>
<table class="table table-striped table-dark mt-3">
    <thead>
        <tr>
            <th>Login</th>
            <th>Name</th>
            <th>Email</th>
            @if (User.Identity.IsAuthenticated)
            {
                <th>Actions</th>
            }
        </tr>
    </thead>
    @foreach (var user in Model)
    {
<tr>
    <td><a href="/user/details/@user.Id" class="text-success">@user.Login</a></td>
    <td>@user.Name</td>
    <td>@user.Email</td>
    @if (User.Identity.IsAuthenticated)
    {
        <td>
            <a class="text-light mr-2" href="/user/edit/@user.Id"><i class="far fa-edit"></i></a>

            <a class="text-danger" href="/user/delete/@user.Id"><i class="far fa-trash-alt"></i></a>
        </td>
    }
</tr>
    }



</table>
<a class="btn btn-success" href="/user/create"><i class="fas fa-plus mr-2"></i>Add new</a>