@model List<Service.DTO.UserDto>
@{
    ViewData["Title"] = "Users";
}
<h1>Users</h1>
<table class="table table-hover mt-3">
    <thead class="thead-light">
        <tr>
            <th>Login</th>
            <th>Name</th>
            <th>Email</th>
        </tr>
    </thead>
    @foreach (var user in Model)
    {
        <tr>
            <td><a href="/user/details/@user.Id">@user.Login</a></td>
            <td>@user.Name</td>
            <td>@user.Email</td>

        </tr>
    }
    <tr>
    </tr>


</table>
<a class="btn btn-success" href="/user/create"><i class="fas fa-plus mr-2"></i>Add new</a>